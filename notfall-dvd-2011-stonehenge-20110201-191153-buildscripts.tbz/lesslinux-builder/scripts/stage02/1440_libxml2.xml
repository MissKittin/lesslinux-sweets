<llpackages>
	<package 
		name="libxml2"
		version="2.7.8"
		class="devel"
		>
		<license>GPLv2</license>
		<sources>
			<file>               
				<pkg sha1="859dd535edbb851cc15b64740ee06551a7a17d40">libxml2-2.7.8.tar.gz</pkg>
				<mirror>ftp://xmlsoft.org/libxml2/</mirror>
			</file>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr  --with-python --with-threads=no
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
