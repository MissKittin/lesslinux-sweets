<llpackages>
	<package 
		name="mousepad"
		version="0.2.16"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>             
				<pkg sha1="4e63033e0a71578f3ec9a0d2e6a505efd0424ef9">mousepad-0.2.16.tar.bz2</pkg>
				<mirror>http://www.xfce.org/archive/xfce-4.6.0/src/</mirror>
			</file>
			<check>
				<page html="http://www.xfce.org/archive/xfce/">
					<atext linktext="xfce-4.6.2/" />
					<atext linktext="xfce-4.6.3/" />
					<atext linktext="xfce-4.8.0/" />
					<atext linktext="xfce-4.8.1/" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk+</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng12</dep><dep>libpng14</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxfce4util</dep>
                        <dep>libxfcegui4</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>pango</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>startup-notification</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			paxctl -m /usr/bin/mousepad 
			]]>
		</install>
	</package>
</llpackages>
