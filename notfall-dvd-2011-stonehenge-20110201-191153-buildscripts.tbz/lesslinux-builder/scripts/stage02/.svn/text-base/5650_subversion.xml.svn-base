<llpackages>
	<package 
		name="subversion"
		version="1.6.15"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                               
				<pkg sha1="b6fadf944a94b86f989f07bc2d781be41df017bf">subversion-1.6.15.tar.bz2</pkg>
				<mirror>http://subversion.tigris.org/downloads/</mirror>
			</file>
			<!--<check>
				<page html="http://sourceforge.net/projects/grsync/files/">
					<atext linktext="grsync-1.1.2." />
					<atext linktext="grsync-1.2." />
					<atext linktext="grsync-2." />
				</page>
			</check>-->
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>apr-util</dep>
                        <dep>apr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>sqlite</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --disable-nls --without-berkeley-db --enable-all-static --disable-shared && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
