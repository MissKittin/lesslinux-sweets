                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk+</dep>
                        <dep>inetutils</dep>
                        <dep>jpegsrc</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng12</dep><dep>libpng14</dep>
                        <dep>libpthread-stubs</dep>
