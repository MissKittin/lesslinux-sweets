<llpackages>
	<package 
		name="newt"
		version="0.52.12"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="6952115806c7b1dbc36858eb4ca0596b235cf6f4">newt-0.52.12.tar.gz</pkg>
				<mirror>https://fedorahosted.org/releases/n/e/newt/</mirror>
			</file>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>popt</dep>
                        <dep>sed</dep>
                        <dep>slang</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --sysconfdir=/etc --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
