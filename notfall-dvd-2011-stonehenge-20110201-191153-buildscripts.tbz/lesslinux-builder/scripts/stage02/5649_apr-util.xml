<llpackages>
	<package 
		name="apr-util"
		version="1.3.10"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="9a720cf77f1d0fdc5b0f6ce6d656cc864d7d4833">apr-util-1.3.10.tar.bz2</pkg>
				<mirror>http://apache.easy-webs.de/apr/</mirror>
			</file>
			<!--<check>
				<page html="http://sourceforge.net/projects/grsync/files/">
					<atext linktext="grsync-1.1.2." />
					<atext linktext="grsync-1.2." />
					<atext linktext="grsync-2." />
				</page>
			</check>-->
		</sources>
		<builddeps>
                        <dep>apr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>sqlite</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --with-apr=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
