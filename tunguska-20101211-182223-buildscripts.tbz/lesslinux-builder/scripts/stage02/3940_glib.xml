			</file> -->
			<check>
				<page html="http://ftp.gnome.org/pub/gnome/sources/glib/2.26/">
					<atext linktext="glib-2.26.1.." />
					<atext linktext="glib-2.26.2." />
					<atext linktext="glib-2.26.3." />
				</page>
				<page html="http://ftp.gnome.org/pub/gnome/sources/glib/">
					<atext linktext="2.28" />
					<atext linktext="2.30" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<!-- This patch replaces the UTF-8 copyright symbol by (C) to prevent ruby-gnome from failing-->
		<patch>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}
			find . -type f -name '*.h' -exec sed -i  's/©/(C)/g' {} \;
			# find . -type f -name '*.c' -exec sed -i  's/©/(C)/g' {} \;
			
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
