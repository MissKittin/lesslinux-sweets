<llpackages>
	<package 
		name="libpng"
		version="1.4.4"
		class="lib"
		>
		<license>GPLv2</license>
		<sources>
			<file>        
				<pkg sha1="638c5e184b569167148b0cb0f0f2a799660ea44f">libpng-1.4.4.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/libpng/01-libpng-master/1.4.4/</mirror>
			</file>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
