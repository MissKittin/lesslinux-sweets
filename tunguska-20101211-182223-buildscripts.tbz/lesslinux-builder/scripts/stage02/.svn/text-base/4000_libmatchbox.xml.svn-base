<llpackages>
	<package 
		name="libmatchbox"
		version="1.9"
		class="lib"
		>
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="7820b2723581c20db92d8a36e1a75d4a0c57579a">libmatchbox-1.9.tar.bz2</pkg>
				<mirror>http://matchbox-project.org/sources/libmatchbox/1.9/</mirror>
			</file>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libXft</dep>
                        <dep>libXrender</dep>
                        <dep>libpng-stable</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxml2</dep>
                        <dep>libxsettings-client</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --enable-pango --enable-xsettings && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
