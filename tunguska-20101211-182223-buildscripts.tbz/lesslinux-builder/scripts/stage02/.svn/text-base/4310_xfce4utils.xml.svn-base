<llpackages>
	<package 
		name="xfce-utils"
		version="4.6.2"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>               
				<pkg sha1="6373886c3d70e576859741bde747a235567ffd8e">xfce-utils-4.6.2.tar.bz2</pkg>
				<mirror>http://mocha.xfce.org/archive/xfce-4.6.2/src/</mirror>
			</file>
			<check>
				<page html="http://mocha.xfce.org/archive/">
					<atext linktext="xfce-4.6.3" />
					<atext linktext="xfce-4.6.4" />
					<atext linktext="xfce-4.6.5" />
					<atext linktext="xfce-4.8" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk+</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng-stable</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxfce4util</dep>
                        <dep>libxfcegui4</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>pango</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>startup-notification</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<!-- soft -->
			 <dep>imake</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			paxctl -m  /usr/bin/xfce4-about
			paxctl -m  /usr/bin/xfrun4
			
			]]>
		</install>
	</package>
</llpackages>
