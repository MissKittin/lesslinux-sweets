		version="1.6.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                
				<pkg sha1="6e59871c0cb683a1fa84731db73a662727a76976">xf86-input-synaptics-1.6.2.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/driver/</mirror>
			</file>
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/driver/">
					<atext linktext="xf86-input-synaptics-1.6.3" />
					<atext linktext="xf86-input-synaptics-1.6.4" />
					<atext linktext="xf86-input-synaptics-1.7." />
