			<file>                                                                               
				<pkg sha1="c43826bc3e273df048f47a77c4affb36614f2b7e">opal-3.6.8.tar.bz2</pkg>
				<mirror>http://ftp.gnome.org/pub/gnome/sources/opal/3.6/</mirror>
			</file>
