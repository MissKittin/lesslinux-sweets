<llpackages>
	<package 
		name="libpciaccess"
		version="0.13.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="ae4dcf27a1b52c6a1fd90b21165fbaecae34e8ac">libpciaccess-0.13.1.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libpciaccess-0.13.3." />
					<atext linktext="libpciaccess-0.13.2." />
					<atext linktext="libpciaccess-0.14." />
					<atext linktext="libpciaccess-0.15." />
					<atext linktext="libpciaccess-0.2" />
					<atext linktext="libpciaccess-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
