body { 
 font-family: sans-serif; 
 font-size: 12px; 
 } 
 body h5 { 
 font-size: 12px; 
 } 
 body h4 { 
 font-size: 13px; 
 } 
 body h3 { 
 font-size: 15px; 
 } 
 body h2 { 
 font-size: 18px; 
 } 
 body h1 { 
 font-size: 21px; 
 } 
 body .warndiv {
	 font-weight: bold;
 }
 
a:link, a:visited, a:active {
	text-decoration: none;
	color: blue;
}
a:hover {
	text-decoration: underline;
}
a.showsmart, a.hidesmart {
	display: block;
}


 
 #dmipre, #avrpre { 
 font-family: monospace; 
 display: none; 
 }

#showcomp, #showavira { 
 display: block; 
 } 

 #hidecomp, #hideavira, .smartinfo, .smarterror { 
 display: none; 
 } 
 
 div.smartinfo {
	border: 1px solid lightgray;
	margin: 5px;
 }
 div.smarterror {
	border: 1px solid red;
	margin: 5px;
 }
 
 
 div.smartinfo div { 
 font-family: monospace; 
 } 
 div#divdrives { 
 margin-left: 12px; 
 } 
 .intextdrives { 
 margin-left: 12px; 
 } 
 .drivebox { 
 padding-left: 12px; 
border: 1px solid lightgray;
margin: 5px;
} 


.pouterbox, .pouterbox-green, .pouterbox-red { 
 padding: 8px; 
 margin: 10px;
 margin-left: 25px;
 border: 1px solid lightgray;
 border-left-width: 4px;
 background-color: whitesmoke;
 color: gray;
 }
 
 .pouterbox-green { 
color: black;
border: 1px solid green;
border-left-width: 4px;
 }
 
.pouterbox-red {
color: black;
border: 1px solid red;
border-left-width: 4px;
}
 
.pouterbox h5, .pouterbox-green h5, .pouterbox-red h5 {
 margin: 7px;
 margin-left: 0px;
}




 .smartsummary { 
 padding: 10px; 
 padding-left: 0px; 
 font-weight: bold; 
 } 
 table {
 border-collapse: collapse;
 }
 
 table tr td { 
 font-family: sans-serif; 
 font-size: 12px; 
 padding: 3px;
 } 
 table thead tr td { 
 font-weight: bold; 
 } 
 
 table tr.oddline td {
	background-color: lightsmoke;
 }
 table tr.evenline td {
	background-color: white;
 }
 .pinnerbox { 
 padding: 15px; 
 padding-left: 0px; 
 } 
 a.hidesmart { 
 display: none; 
 } 
 td.fulllog { 
 display: none; 
 } 
  